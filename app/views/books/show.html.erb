
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>
					<% if @book.favorited_by?(current_user) %>
						<td>
							<%= link_to book_favorites_path(@book), method: :delete do %>
							<i class="fa fa-heart" aria-hidden="true"><%= @book.favorites.count %></i>
							<% end %>
						</td>
					<% else %>
						<td>
							<%= link_to book_favorites_path(@book), method: :post do %>
							<i class="fa fa-heart-o" aria-hidden="true"><%= @book.favorites.count %></i>
							<% end %>
						</td>
					<% end %>
					<td>コメント数: <%= @book.book_comments.count %></td>
					<% if current_user==@book.user %>
						<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			</table>

			<% @book.book_comments.each do |book_comment| %>
				<table class="table">
					<tbody>
						<tr>
							<td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %></td>
							<td><%= book_comment.comment %></td>
							<% if current_user == book_comment.user %>
							<td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn-sm btn-danger destroy_book_#{book_comment.id}" %></td>
							<% end %>
						</tr>
					</tbody>
				</table>
			<% end %>

			<%= form_for [@book,@book_comment] do |f| %>

				<div class="field">
					<%= @book.title %>
				</div>

				<div class="field">
					<%= f.text_area :comment, class: "col-xs-12 book_comment_body" %>
				</div>

				<div class="actions row">
					<%= f.submit "送信", class: "btn btn-outline-secondary col-xs-1 col-xs-offset-11" %>
				</div>
			<% end %>
	</div>
</div>

