<% book.book_comments.each do |book_comment| %>
	<tr>
		<td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %></td>
		<td><%= book_comment.comment %></td>
		<% if current_user == book_comment.user %>
		<td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn-sm btn-danger destroy_book_#{book_comment.id}" %></td>
		<% end %>
	</tr>
<% end %>