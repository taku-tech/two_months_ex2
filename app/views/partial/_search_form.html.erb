<% if user_signed_in? %>
  <div class="row">
  	<div class="col-xs-4 col-xs-offset-4">
  		<div class="search-form">
		  <%= form_tag(search_path, method: :get) do %>
		    <%= text_field(@serch_content, :search_word) %>
		    <%= select(@serch_content, :search_model, [["User","user_match"], ["Book","book_match"]]) %>
		    <%= select(@serch_content, :search_method, [["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
		    <%= submit_tag "検索" %>
		  <% end %>
		  </div>
  	</div>
</div>
<% end %>