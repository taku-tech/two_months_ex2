<table class="table">
		<tr><%= attachment_image_tag(user, :profile_image, fallback: "no_image.jpg", size: "100x100") %></tr>

		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>

		<tr>
			<th>introduction</th>
			<th><%= user.introduction %></th>
		</tr>
</table>

<% if current_user.id == user.id %>
	<div class="row">
		<%= link_to '',edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
	</div>
<% else %>
	<% if user.followed_by?(current_user) %>
		<div class="row">
			<%= link_to "フォローを外す", user_relationships_path(user), method: :delete, class: "col-xs-10 col-xs-offset-1 btn btn-primary" %>
		</div>
	<% else %>
		<div class="row">
			<%= link_to "フォローする", user_relationships_path(user), method: :post, class: "col-xs-10 col-xs-offset-1 btn btn-secondary" %>
		</div>
	<% end %>
<% end %>